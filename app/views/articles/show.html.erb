<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card">
        <div class="card-header">
          <h1><%= raw @article.title %></h1>
        </div>
        <div class="card-body">
          <div class="article-body">
            <%= raw @article.body %>
          </div>
          <div class="mt-3">
            <% if @article.user == current_user %>
              <p>By: Me</p>
            <% elsif @article.user.present? %>
              <p>By: <%= @article.user.email %></p>
            <% else %>
              <p>By: Guest User</p>
            <% end %>
          </div>
          <p>Last updated: <%= @article.updated_at.strftime("%B %d, %Y %H:%M") %></p>
        </div>
        <div class="card-footer">
          <div class="d-flex justify-content-between">
            <% if @article.user == current_user %>
              <div>
                <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-success" %>
                <%= button_to "Destroy", article_path(@article), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger", style: 'margin-top: 10%;' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="card mt-4">
        <div class="card-header">
          <h2>Comments</h2>
        </div>
        <div class="card-body">
          <%= render @article.comments %>
        </div>
          <%= render 'comments/form', article: @article %>
      </div>

    </div>
  </div>
</div>
